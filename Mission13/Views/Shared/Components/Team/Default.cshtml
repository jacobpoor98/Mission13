@{
}

@model IEnumerable<string>

<!-- this will call the TeamViewComponent to filter by team name -->
<div class="btn btn-block">
    <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam=""
       class="btn btn-outline-secondary col-12 m-2">Home</a>
    <br />

    <!-- this will ensure the selected Team button changes color -->
    @foreach (string c in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bowlerTeam="@c"
           class="btn @(ViewBag.SelectedType == c ? "btn-primary col-12 m-2" : "btn-outline-secondary col-12 m-2")">@c</a>
        <br />
    }
</div>