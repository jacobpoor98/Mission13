@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<!-- sets a title for the selected team or defaults to bowlers -->
<vc:team-name></vc:team-name>

<!-- Display the list of bowlers -->
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th>Bowler</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Phone</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var b in Model)
        {
        <tr>
            <td>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <!-- buttons to edit and delete a bowler -->
            <td><a class="btn btn-sm btn-warning" asp-controller="Home" asp-action="EditBowler" asp-route-id="@b.BowlerID">Edit</a></td>
            <td><a class="btn btn-sm btn-danger" asp-controller="Home" asp-action="DeleteBowler"  asp-route-id="@b.BowlerID">Delete</a></td>
        </tr>
        }
    </tbody>
</table>

<!-- button to add a new bowler -->
<a class="btn btn-primary" asp-controller="Home" asp-action="AddBowler">Add Bowler</a>